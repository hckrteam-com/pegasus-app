{
  "name": "pegasus-app",
  "author": {
    "name": "hckrteam",
    "url": "https://hckrteam.com"
  },
  "productName": "Pegasus APP",
  "version": "1.0.0",
  "description": "Pegasus APP",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "build": {
    "appId": "pegasus-app",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/pegasus.ico"
    },
    "nsis": {
      "installerIcon": "icons/pegasus.ico",
      "uninstallerIcon": "icons/pegasus.ico",
      "uninstallDisplayName": "Pegasus APP Uninstaller",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "license": "UNLICENSED",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "/icons/pegasus.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "input_overlay_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "audio-effects": "^1.2.4",
    "electron-iohook": "^0.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "fetch": "^1.1.0",
    "make-fetch-happen": "^13.0.0",
    "node-fetch": "^3.3.2",
    "rich-presence-builder": "^0.1.1",
    "express": "^3.19.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^15.0.0",
    "electron-builder": "^22.9.1"
  },
  "iohook": {
    "targets": [
      "node-72",
      "electron-76"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}
